
.t-tr {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.t-tr t-th,
.t-tr t-td {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.t-tr .t-check-box {
	-webkit-flex-shrink: 0;
	        flex-shrink: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 80rpx;
	color: #3b4246;
	border-left: 1px #d0dee5 solid;
	border-top: 1px #d0dee5 solid;
}
.t-tr .t-check-box checkbox {
	-webkit-transform: scale(0.8);
	        transform: scale(0.8);
}

